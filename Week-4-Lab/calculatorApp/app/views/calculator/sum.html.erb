<%= link_to 'Back to Full Calculator', calculate_path, class: "link-style" %>

<h1>Simple Calculator</h1>
<h3>Addition</h3>

<%= form_with url: "/sum", local: true, data: { turbo: false } do |f| %>
    <%= text_field_tag :number1 %>
    <%= text_field_tag :number2 %>
    <%= submit_tag "+" %>
<% end %>

<hr>

<h1>Sum</h1><br>

<%= @num1 %> + <%= @num2 %> = <%= @result %>

